% -*- mode: erlang -*-
{erl_opts, [ debug_info
           , {platform_define, "1[89]|2[0-9]", 'NAMESPACED_TYPES'}
           , {platform_define, "R1(1|2|3|4|5|6)", 'OXTHRIFT_NO_MAPS'}
           ]}.

{cover_enabled, true}.
{cover_print_enabled, true}.

{deps, [
  {ranch, ".*", {git, "https://github.com/ninenines/ranch.git", {tag, "1.2.1"}}}
]}.
